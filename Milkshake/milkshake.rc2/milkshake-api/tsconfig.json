{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "dist",
        "target": "ES2021",
        "module": "CommonJS",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
